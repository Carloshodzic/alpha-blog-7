<h1>Lista de articulos: </h1>

<table>
    <thead>
        <tr>
            <th>Titulo</th>
            <th>Description</th>
            <th colspan="3">Acciones</th>
        </tr>
    </thead>
    <tbody>
        <% @article.each do |article| %>
            <tr>
                <td><%= article.title %></td>
                <td><%= article.description %></td>
                <td><%= link_to 'Show', article_path(article) %></td>
                <td><%= link_to 'Edit', edit_article_path(article) %></td>
                <td><%= link_to 'Delete', article_path(article), data: { turbo_method: :delete, "turbo-confirm": "Estas seguro?" } %></td>
            </tr>
        <% end %>
    </tbody>
</table>
<p>
    <%= link_to 'Crear nuevo articulo', new_article_path %>
</p>
